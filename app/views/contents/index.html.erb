<h1>Listing contents</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <!--th>Doc</th-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.article_id %></td>
        <!--td><%#= content.doc %></td-->
        <td><%= link_to image_tag('buttons/show.png',   alt: 'show',    title: t(:show)),    content_url(id: content) %></td>
        <td><%= link_to image_tag('buttons/edit.png',   alt: 'edit',    title: t(:edit)),    edit_content_url(id: content) %></td>
        <td><%= link_to image_tag('buttons/delete.png', alt: 'destroy', title: t(:destroy)), content_url(id: content), method: :delete, data: {confirm: t(:sure_message)} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t(:new_content), new_content_path %>
