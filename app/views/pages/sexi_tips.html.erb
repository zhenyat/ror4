    <% @items.each do |item| %>
      <p>
        <!-- way 1 -->
        <!--a class="tooltip" href="#"><%#= item.title %><span class="critical"><%#= item.description %></span></a-->

        <!-- way 2 -->
        <%= link_to "#", class: "tooltip" do %>
          <%= item.title %>
          <span class="critical"><%= item.description %></span>
        <% end %>
      </p>
    <% end %>

