<section>
  <h3>1. Helpers</h3>
  <p>Three methods to inspect a variable contents</p>
  <dl>
    <dt>debug</dt>
    <dd>Code: "debug @groups"</dd>
    <%= debug @groups %>

    <dt>to_yml<dt>
    <dd>Code: simple_format @groups.first.to_yaml</dd>
    <%= simple_format @groups.first.to_yaml %>
    <%= "Localized created_at: " + I18n.l(@groups.first.created_at) + "\n\n" %>
    <br><br>
    <dt>inspect</dt>
    <dd>Code: @groups.inspect</dd>
    <%= @groups.inspect %>
  </dl>
</section>

